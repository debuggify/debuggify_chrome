{
    "name": "__MSG_extension_name__",
    "version": "0.0.1",
    "description": "__MSG_extension_description__",
    "permissions": [
	    "tabs",
	    "contextMenus",
	    "http://*/*", "https://*/*"
    ],

    "background_page": "background.html",

    "options_page": "options.html",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["app/log.js"],
            "css": ["css/debuggify.css"],
            "run_at":"document_start",
            "all_frames": false
        }
    ],

    "browser_action": {
        "default_icon": "images/debuggify.png",
        // "default_popup": "popup.html",
        "default_title": "Debuggify"

    },

    "default_locale": "en"
}
